<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="MainItemMargin">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemSeekBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:max">30</item>
    </style>


    <!-- Example Text Style -->
    <style name="CommonExampleTextStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style
        name="ExampleSingleLineStyle"
        parent="CommonExampleTextStyle">

        <item name="android:maxLength">20</item>
        <item name="android:lines">1</item>
        <item name="android:background">@color/colorLightGrey</item>

    </style>

    <style
        name="ExampleMultiLineStyle"
        parent="CommonExampleTextStyle">

        <item name="android:lines">5</item>
        <item name="android:background">@color/colorDarkGrey</item>

    </style>
    <!-- End Example Text Style -->


</resources>